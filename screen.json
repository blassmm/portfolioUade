{
    "component": "HeroSection",
    "designSystem": {
      "name": "DarkModernCreativeHero",
      "colorScheme": {
        "mode": "dark",
        "background": "#0E0E0E",
        "textPrimary": "#FFFFFF",
        "highlight": "#16FF75",
        "mutedText": "#A0A0A0",
        "gradientAccent": "radial-gradient(circle, #0E0E0E 0%, #1B1B1B 100%)"
      },
      "typography": {
        "fontFamily": "'Inter', sans-serif",
        "heading": {
          "fontSize": "clamp(2.5rem, 5vw, 4rem)",
          "fontWeight": 600,
          "color": "#FFFFFF",
          "highlightWordColor": "#16FF75"
        },
        "subheading": {
          "fontSize": "1rem",
          "fontWeight": 300,
          "color": "#A0A0A0"
        },
        "alignment": "center"
      },
      "layout": {
        "width": "100vw",
        "height": "100vh",
        "maxWidth": "1200px",
        "padding": "2rem",
        "display": "flex",
        "flexDirection": "column",
        "justifyContent": "center",
        "alignItems": "center"
      },
      "elements": {
        "animated3DObjects": {
          "enabled": true,
          "type": ["{", "#", ">"],
          "style": "matte black",
          "motion": "floating and rotating",
          "depth": "subtle shadows and lighting"
        },
        "background": {
          "type": "radial gradient",
          "effect": "subtle green glow behind text"
        }
      },
      "motion": {
        "textEntrance": "fade-in with slight upward motion",
        "3DObjectMotion": "continuous slow rotation and float",
        "transition": {
          "duration": "0.6s",
          "easing": "ease-in-out"
        }
      },
      "footerMeta": {
        "position": "bottom-center",
        "fontSize": "0.75rem",
        "opacity": 0.5,
        "content": "location and time indicator"
      },
      "responsive": {
        "mobile": {
          "padding": "1rem",
          "headingFontSize": "clamp(2rem, 6vw, 3rem)",
          "subheadingFontSize": "0.875rem"
        }
      }
    }
  }
  